<% include ../layout/header.ejs %>

<div class="page-container row-fluid container-fluid">
    
    <% include ../layout/menu.ejs %>
    
    <section id="main-content" class=" ">
        <section class="wrapper main-wrapper row" style=''>
            <div class='col-xs-12'>
                <div class="page-title">
                    <div class="pull-left">
                        <h1 class="title">THÊM SẢN PHẨM</h1>
                    </div>
                    <div class="pull-right hidden-xs">

                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-xs-12">
                <section class="box ">
                    <header class="panel_header">
                        <h2 class="title pull-left">NHẬP VÀO THÔNG TIN SẢN PHẨM</h2>
                        <div class="actions panel_actions pull-right">
                            <a class="box_toggle fa fa-chevron-down"></a>
                            <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
                            <a class="box_close fa fa-times"></a>
                        </div>
                    </header>
                    <div class="content-body">
                        <div class="row">
                            <% if(response_message){ %>
                            <div class="alert alert-success"><%= response_message%></div>
                            <% } %>
                            <% if(errors) { %>
                            <div class="alert alert-danger">
                                <% errors.forEach(function(e){ %>
                                <%= e.msg %> <br />
                                <%});%>
                            </div>
                            <% };%>
                            <form action="" method="post" enctype="multipart/form-data">
                                <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                    <div class="form-group">
                                        <label class="form-label" for="field-120334" >Tên sản phẩm</label>
                                        <span class="desc"></span>
                                        <div class="controls">
                                            <input type="text" required id="name" value="" class="form-control" name="name">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                    <div class="form-group">
                                        <label class="form-label" for="field-120334">Hình ảnh sản phẩm</label>
                                        <span class="desc"></span>
                                        <div class="controls">
                                            <input type="file" id="hinh" value="" required="required" class="form-control" name="hinh">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                    <div class="form-group">
                                        <label class="form-label" for="field-120334">Mức giá niêm yết</label>
                                        <span class="desc"></span>
                                        <div class="controls">
                                            <input type="number" id="price" value="" required="required" min="0" class="form-control" name="price">
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                    <div class="form-group">
                                        <label class="form-label" for="field-120334">Khuyến mãi</label>
                                        <span class="desc"></span>
                                        <div class="controls">
                                            <input type="number" id="price" value="0" min="0" class="form-control" name="sale">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                    <div class="form-group">
                                        <label class="form-label" for="field-120334">Danh mục</label>
                                        <span class="desc"></span>
                                        <div class="controls">
                                            <select class="form-control" id="categoryId" name="categoryId" required>
                                                <% category.forEach(function(item){ %>
                                                <option value="<%= item.id%>"><%= item.name%></option>
                                                <%})%>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                    <div class="form-group">
                                        <label class="form-label" for="field-120334">Thông tin thêm</label>
                                        <span class="desc"></span>
                                        <div class="controls">
                                            <textarea name="description" id="description" class="form-control autogrow" cols="5"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                    <div class="text-left">
                                        <button type="submit" class="btn btn-primary">Lưu</button>
                                        <button type="button" class="btn">Thoát</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </section>
            </div>
        </section>
    </section>
  
    <div class="chatapi-windows "></div>
</div>
<% include ../layout/footer.ejs %>
