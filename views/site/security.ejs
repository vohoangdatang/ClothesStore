<script>
    addLoadEvent(function () {
        $.ajax({
            url: '//www.Oakya.vn/blog/api/get_feed?notIn=31',
            type: 'GET',
            dataType: 'json',
            success: function (data) {
               // console.log(data);
                var container_article = $(".tab-content-news .row");
                $(".tab-content-news .row").html('');
                var dataArticle = data.data;
               // console.log(dataArticle);
                var i;
                for (i = 0; i < dataArticle.length; i++) {
                    if (i >= 3) break;
                    var item = "<div class='col-xl-4 col-lg-4 col-md-6 col-12 item'>"
                        + "<div class='news-item'>"
                        + "<a aria-label='text' href='" + dataArticle[i].alias + "' target='_blank'><img class='news-blog' src='" + dataArticle[i].imageSrc + "' alt='" + dataArticle[i].title + "' data-src='" + dataArticle[i].imageSrc + "'/></a>"
                        + "<div class='time'>"
                        + "<i class='fa fa-clock-o'></i> " + dataArticle[i].dateResponse + "</div>"
                        + "<div class='title'><a href='" + dataArticle[i].alias + "' class='article-title' target='_blank' title='" + dataArticle[i].title + "'>" + dataArticle[i].title + "</a></div>"
                        + "<div class='continue'><a href='" + dataArticle[i].alias + "' class='article-title' target='_blank' title='" + dataArticle[i].title + "'>Đọc tiếp →</a></div>";
                    container_article.append(item);
                }
            }
        });
    });
</script>
