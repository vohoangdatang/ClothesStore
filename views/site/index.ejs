<% include layout/header.ejs %>
<!-- Header End -->

<div id="maincontainer">
  <!-- Slider Start-->
  <section class="slider">
    <div class="container">
      <div class="flexslider" id="mainslider">
        <ul class="slides">
          <li>
            <img src="images/KM/8.jpg"alt=""  style="height: 516px;" />
          </li>
          <li>
            <img src="images/KM/9.jpg" alt="" style="height: 516px;" />
          </li>
          <li>
            <img src="images/KM/10.jpg" alt="" style="height: 516px;" />
          </li>
          
        </ul>
      </div>
    </div>
    
  </section>

   <% categories.forEach(function(ca) { if (ca.counter > 0) { var i = 0; %>
      <section id="featured" class="row mt40">
        <div class="container">
          <h1 class="heading1"><span class="maintext" style="color: rgba(63, 94, 251, 1) 0%, rgba(252, 70, 107, 1) 100% ;"> <%= ca.name%> </span></h1>
          <ul class="thumbnails">
            <%  products.forEach(function(pro){ if(i < 100) { if(pro.categoryId === ca.id){ i ++ ; %>
                 <li class="span3">
                          <div class="thumbnail">
                          <% if(pro.sale > 0) { %>
                            <span class="tooltip-test" style="background-color: red; color: white; font-size: 15px; z-index: 1000; position: absolute; top: 0; left: 0; padding: 6px 10px;border-radius: 100px;">-<%= pro.sale %>%</span>
                          <% } %>
                          <a href="/san-pham/<%= pro.urlRewriteName%>.<%= pro.id%>.<%= pro.categoryId%>.html"><img alt="" src="upload/<%= pro.photo %>" style="font-size:10px ; height : 300px  ; width:100% "></a>
                          <div class="pricetag" style="background:white;">
                            <span class="spiral"style="display:none" ></span><a href="/add-cart.<%= pro.id %>" class="productcart" style="display:none">THÊM VÀO GIỎ HÀNG</a>
                            <a class="prdocutname" href="/san-pham/<%= pro.urlRewriteName%>.<%= pro.id%>.<%= pro.categoryId%>.html" style="color:black ;font-size: 16px ; height : 50px; width : 200px ;"> <b><%= pro.name %></b></a>
                    
                            <div class="price">
                              <% if(pro.sale > 0) { %>
                              <div class="pricenew" style="color:red ;float: right; "><%= parseInt(pro.salePrice).toLocaleString('en-us') %> <p style="color:red ;float:right;">đ</p></div>
                              <div class="pricenew" style="color:black ;float: right; margin-right: 3px;text-decoration: line-through; margin-right: 13px"><%= parseInt(pro.price).toLocaleString('en-us') %><p style="color:black  ;float: right;">đ</p></div>
                              <% } else { %>
                               <div class="pricenew" style="color:black ; "><%= parseInt(pro.price).toLocaleString('en-us') %>
                               <p style="color:black  ;float: right;"></p></div>
                              <% } %>
                        </div>
                      </div>
                    </div>
                  </li>
            <% }}})%>
          </ul>
        </div>
      </section>
  <% }})%>

<% include layout/footer.ejs %>
